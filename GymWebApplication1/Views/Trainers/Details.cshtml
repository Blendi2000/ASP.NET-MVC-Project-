@model GymWebApplication1.Models.Trainer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trainer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerLastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainerLastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainerAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerContact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainerContact)
        </dd>
    </dl>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Schedules)
    </dt>
    <dd class="col-sm-10">
        <table class="table">
            <tr>
                <th>Schedule Time</th>
               
            </tr>
            @foreach (var item in Model.Schedules)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScheduleDate)
                    </td>  
                </tr>
            }
        </table>
    </dd>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TrainerId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
